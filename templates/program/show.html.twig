{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3 w-25" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">
                {{ program.title }}
                {% if app.user %}
                    <a href="{{ path('program_watchlist', {id: program.id})}}">
                        <i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                    </a>
                {% endif %}
                
                
            </h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                <li><a href="{{ path("program_season_show", { slug: program.slug , season: season.id }) }}">Saison {{ season.number }}</a></li>
                {% endfor %}
            </ul>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path("actor_show", { id: actor.id }) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {% if is_granted("ROLE_ADMIN") or app.user is same as(program.owner)  %}
        <a href="{{ path('program_edit', { programSlug: program.slug }) }}">Éditer</a>
    {% endif %}

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
<div class="form-group col col-lg-6 col-md-12">
    {{ form_start(form) }}
    <div class="form-group mb-3">
        {{ form_label(form.title, 'programs.title_label'|trans) }}
        {{ form_widget(form.title, {'attr': {
            'placeholder': 'programs.title_placeholder'|trans
        }}) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.category, 'programs.category_label'|trans) }}
        {{ form_widget(form.category) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.poster, 'programs.poster_label'|trans) }}
        {{ form_widget(form.poster, {'attr': {
            'placeholder': 'programs.poster_placeholder'|trans
        }}) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.country, 'programs.country_label'|trans) }}
        {{ form_widget(form.country) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.year, 'programs.year_label'|trans) }}
        {{ form_widget(form.year) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.summary, 'programs.summary_label'|trans) }}
        {{ form_widget(form.summary, {'attr': {
            'placeholder': 'programs.summary_placeholder'|trans
        }}) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.actors, 'programs.actors_label'|trans) }}
        {{ form_widget(form.actors) }}
    </div>
    <button class="btn btn-secondary">
        {{ button_label|default('nav.new'|trans) }}
    </button>
    {{ form_end(form) }}
</div>

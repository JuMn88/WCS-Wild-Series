{% extends 'base.html.twig' %}

{% block title %}
    {{ program.title }} - S{{ season.number }}E{{ episode.number }} : {{ episode.title }}
{% endblock %}

{% block body %}
<section class="container mt-4">
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }} : Saison {{ season.number }} Episode {{ episode.number }}</h1>
            <h2>{{ episode.title }}</h2>
            <p>Synopsis : {{ episode.summary }}</p>
        </div>
    </div>
    <p>
        <a href="{{ path('program_season_show', { slug: program.slug , season: season.id }) }}">
            Retour à la saison {{ season.number }}
        </a>
    </p>
    <p>
        <a href="{{ path('program_show', { slug: program.slug }) }}">
            Retour à la série {{ program.title }}
        </a>
    </p>
    <p>
        <a href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </p>
</section>
<section class="container mt-4">
        <h2>Commentaires : </h2>
        <table class="table table-striped table-hover">
            {% for comment in episode.comments %}
                <tr>
                    <td class="col-2">
                        Note : {{ comment.rate }}
                    </td>
                    <td class="col-8">
                        {{ comment.comment }}
                    </td>
                    <td class="col-2">
                        Auteur : {{ comment.author.username }}
                    </td>
                    {% if is_granted("ROLE_ADMIN") or app.user is same as(comment.author)  %}
                        <td class="col-2">
                            {# <a href="{{ path('comment_delete', { commentId: comment.id }) }}">Supprimer</a> #}
                            {{ include('/comment/_delete_form.html.twig') }}
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                Aucun commentaire trouvé.
            {% endfor %}
        </table>
</section>
    {% if app.user %}
<section class="container mt-4">
        <h2>Ajouter un commentaire : </h2>
        {{ include('/comment/_form.html.twig') }}
</section>
    {% endif %}
{% endblock %}
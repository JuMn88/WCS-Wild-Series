{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} - Saison {{ season.number }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
            <p>{{ season.description }}</p>
            <p>Année : {{ season.year }}</p>
            <ul>
                {% for episode in episodes %}
                    <li>
                        <a href="{{ path("program_episode_show", { programSlug: program.slug , season: season.id , episodeSlug: episode.slug }) }}">
                            Episode {{ episode.number }} : {{ episode.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <p>
        <a href="{{ path("program_show", { slug: program.slug }) }}">
            Retour à la série {{ program.title }}
        </a>
    </p>
    <p>
        <a href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </p>
{% endblock %}
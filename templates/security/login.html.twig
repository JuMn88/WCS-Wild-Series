{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.login'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class='container border border-light rounded shadow-lg mt-sm-5 px-sm-5 px-4'>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {% trans with {'%username%': app.user.username} %}
                    account.logged_as
                {% endtrans %}
                <a href="{{ path('app_logout') }}">{{ 'account.logout'|trans }}</a>
            </div>
        {% endif %}

        <h2 class="my-3 font-weight-normal text-center">
            {{ 'account.login_title'|trans }}
        </h2>
        <div class="mb-3">
            <label for="inputEmail">
                {{ 'account.email'|trans }}
            </label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword">
                {{ 'account.password_label'|trans }}
            </label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class='d-flex justify-content-center'>
            <button class="btn btn-lg btn-primary mb-3" type="submit">
                {{ 'account.login_btn'|trans }}
            </button>
        </div>
        <div class="mb-3 text-center">
            <span class="form-text">
                {{ 'account.subscribe'|trans }}<a href="{{ path('app_register') }}">{{ 'account.subscribe_link'|trans }}</a>
            </span>
        </div>
    </form>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ season.program.title }} {{ 'programs.season'|trans }} {{ season.number }} - 
    {{ 'seasons.edit'|trans }} - 
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'seasons.edit_title'|trans }}{{ season.program.title }} {{ 'programs.season'|trans }} {{ season.number }}
    </h1>

    {{ include('season/_form.html.twig', {'button_label': 'nav.edit'|trans}) }}

    <a class="btn btn-primary" href="{{ path('season_index') }}">
        {{ 'nav.seasons_back'|trans }}
    </a>

    {% if is_granted("ROLE_ADMIN") %}{{ include('season/_delete_form.html.twig') }}{% endif %}
{% endblock %}

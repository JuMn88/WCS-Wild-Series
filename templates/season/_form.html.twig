<div class="form-group col col-lg-6 col-md-12">
	{{ form_start(form) }}
	<div class="form-group mb-3">
		{{ form_label(form.program, 'seasons.program_label'|trans) }}
		{{ form_widget(form.program) }}
	</div>
	<div class="form-group mb-3">
		{{ form_label(form.number, 'seasons.number_label'|trans) }}
		{{ form_widget(form.number) }}
	</div>
    <div class="form-group mb-3">
		{{ form_label(form.year, 'seasons.year_label'|trans) }}
		{{ form_widget(form.year) }}
	</div>
    <div class="form-group mb-3">
		{{ form_label(form.description, 'seasons.description_label'|trans) }}
		{{ form_widget(form.description, {'attr': {
			'placeholder': 'seasons.description_placeholder'|trans
		}}) }}
	</div>
    <button class="btn btn-secondary">
        {{ button_label|default('nav.new'|trans) }}
    </button>
	{{ form_end(form) }}
</div>
{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.seasons'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'seasons.index_title'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'seasons.number'|trans }}</th>
                <th>{{ 'seasons.year'|trans }}</th>
                <th>{{ 'seasons.description'|trans }}</th>
                <th>
                    {% if is_granted("ROLE_ADMIN") %}
                        {{ 'nav.actions'|trans }}
                    {% else %}
                        {{ 'nav.action'|trans }}
                    {% endif %}
                </th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('season_show', {'id': season.id}) }}">
                        {{ 'nav.show'|trans }}
                    </a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a class="btn btn-secondary" href="{{ path('season_edit', {'id': season.id}) }}">
                            {{ 'nav.edit'|trans }}
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    {{ 'nav.no_records'|trans }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('season_new') }}">
        {{ 'nav.new'|trans }}
    </a>
{% endblock %}

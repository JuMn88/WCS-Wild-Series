<div class="form-group col col-lg-6 col-md-12">
	{{ form_start(form) }}
    <div class="form-group mb-3">
		{{ form_label(form.season, 'episodes.season_label'|trans) }}
		{{ form_widget(form.season) }}
	</div>
	<div class="form-group mb-3">
		{{ form_label(form.title, 'episodes.title_label'|trans) }}
		{{ form_widget(form.title, {'attr': {
			'placeholder': 'episodes.title_placeholder'|trans
		}}) }}
	</div>
    <div class="form-group mb-3">
		{{ form_label(form.number, 'episodes.number_label'|trans) }}
		{{ form_widget(form.number) }}
	</div>
	<div class="form-group mb-3">
		{{ form_label(form.summary, 'episodes.summary_label'|trans) }}
		{{ form_widget(form.summary, {'attr': {
			'placeholder': 'episodes.summary_placeholder'|trans
		}}) }}
	</div>
    <button class="btn btn-secondary">
        {{ button_label|default('nav.new'|trans) }}
    </button>
	{{ form_end(form) }}
</div>
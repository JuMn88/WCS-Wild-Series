{% extends 'base.html.twig' %}

{% block title %}{{ episode.title }} - {{ 'episodes.edit'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'episodes.edit_title'|trans }}{{ episode.title }}</h1>

    {{ include('episode/_form.html.twig', {'button_label': 'nav.edit'|trans}) }}

    <a class="btn btn-primary" href="{{ path('episode_index') }}">
        {{ 'nav.episode_back'|trans }}
    </a>

    {% if is_granted("ROLE_ADMIN") %}
        {{ include('episode/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

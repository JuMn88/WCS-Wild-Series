{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ episode.summary }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-secondary mt-3" href="{{ path('episode_edit', {slug: episode.slug}) }}">Editer</a>
    {{ include('episode/_delete_form.html.twig') }}
    <a class="btn btn-primary" href="{{ path('episode_index') }}">Retour</a>
{% endblock %}

<div class="form-group col col-lg-6 col-md-12">
	{{ form_start(form) }}
	<div class="form-group mb-3">
		{{ form_label(form.name, 'casting.name_label'|trans) }}
		{{ form_widget(form.name, {'attr': {
			'placeholder': 'casting.name_placeholder'|trans
		}}) }}
	</div>
	<div class="form-group mb-3">
		{{ form_label(form.programs, 'casting.programs_label'|trans) }}
		{{ form_widget(form.programs) }}
	</div>
    <button class="btn btn-secondary">
        {{ button_label|default('nav.new'|trans) }}
    </button>
	{{ form_end(form) }}
</div>
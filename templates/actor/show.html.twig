{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'casting.show_title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>{{ 'casting.name'|trans }}</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>{{ 'casting.programs'|trans }}</th>
                <td>
                    <ul>
                        {% for program in programs %}
                            <li><a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('actor_index') }}">
        {{ 'nav.casting_back'|trans }}
    </a>

    <a class="btn btn-secondary" href="{{ path('actor_edit', {'id': actor.id}) }}">{{ 'nav.edit'|trans }}</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}

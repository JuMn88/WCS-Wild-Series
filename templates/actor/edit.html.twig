{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }} - {{ 'casting.edit'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'casting.edit_title'|trans }}{{ actor.name }}</h1>

    {{ include('actor/_form.html.twig', {'button_label': 'nav.edit'|trans}) }}

    <a class="btn btn-primary" href="{{ path('actor_index') }}">{{ 'nav.casting_back'|trans }}</a>

    {% if is_granted("ROLE_ADMIN") %}
        {{ include('actor/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

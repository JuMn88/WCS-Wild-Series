{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / Catégorie : <a href="{{ path('category_show' , { categoryName: category.name }) }}">{{ category.name }}</a></h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a class="mt-3 btn btn-primary" href="{{ path('category_new') }}">
        Ajouter une catégorie
    </a>
    <a class="mt-3 btn btn-primary" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
